<Window x:Class="RPG_Jahr_words.Add2Chps"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPG_Jahr_words"
        mc:Ignorable="d"
        Title="Add2Chps" Height="225" Width="350" ResizeMode="NoResize">
    <Border Margin="10" BorderThickness="1">
        <Grid>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="10,77,0,0" TextWrapping="Wrap" Text="{Binding Ch1, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
            <TextBlock x:Name="instructions" Margin="10,0,12,109" TextTrimming="WordEllipsis" TextWrapping="WrapWithOverflow" ScrollViewer.VerticalScrollBarVisibility="Auto" Text="TextBlock"/>
            <TextBox Margin="156,77,0,0" TextWrapping="Wrap" Text="{Binding Ch2, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True"/>
            <Button Content="Valider" Margin="76,0,0,10" VerticalAlignment="Bottom" Click="Validation" HorizontalAlignment="Left" Width="75"/>
            <Button Content="Annuler" HorizontalAlignment="Left" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="75" Click="Close"/>
        </Grid>
    </Border>
</Window>
